<div class="row list-title @BackgroundClass" >
    <div class="col-12">
        <span>@Title</span>
    </div>
</div>
<div class="row list-header @BackgroundClass">    
        <div class="row">
            <div class="col-2">
                Check
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-12 col-sm-8">
                        Name
                    </div>
                    <div class="col-12 col-sm-4">
                        Qty
                    </div>                    
                </div>
            </div>
            <div class="col-4">                
                 Actions                
            </div>
        </div>    
</div>

@code {
    [Parameter]
    public string BackgroundClass { get; set; }

    [Parameter]
    public string Title { get; set; }
}