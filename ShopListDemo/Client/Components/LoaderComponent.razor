@if (isVisible)
{ 
    <div style="width: 100%; height: 80vh;" class="d-flex flex-column justify-content-center align-items-center text-center">
        <div class="spinner-border text-primary" style="width: 100px; height:100px;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    
        <div><span class="text-primary loader-text">@Text</span></div>
    </div>
}
@code {
    private bool isVisible = false;

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public bool HasDelay { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        if (HasDelay)
        {
            await Task.Delay(200);
        }
        isVisible = true;
    }

}
